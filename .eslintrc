{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "semi": [2, "never"],
    "quotes": [2, "double"],
    "prettier/prettier": ["error", {
      "singleQuote": false,
      "bracketSpacing": true,
      "semi": false,
      "trailingComma": "none"
    }]
  }
}
